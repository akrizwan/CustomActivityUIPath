<Window x:Class="CustomActivity.AddGACAssemblyWindow"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:CustomActivity"
             mc:Ignorable="d" 
             WindowStartupLocation="CenterScreen"
             Style="{StaticResource CustomWindowStyle}"
             Height="550" Width="500" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <ListBox x:Name="lstGACAssemblies" Grid.Row="0" Grid.Column="0" SelectionMode="Multiple">
        </ListBox>

        <Button x:Name="btnAdd" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalAlignment="Center" Width="100" Margin="10" IsDefault="True" Click="btnAdd_Click">ADD</Button>
    </Grid>
</Window>
